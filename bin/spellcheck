#!/usr/bin/env perl

use strict;
use warnings;
use 5.026;
use lib::findbin '../lib'; # develop-only
use Test2::V0;
use Test::SpellCheck;

# PODNAME: spellcheck
# DESCRIPTION: Command line interface to Test::SpellCheck
# VERSION

# develop-only-begin
$ENV{PERL_FILE_SHAREDIR_DIST} = "Test-SpellCheck=share";
# develop-only-end

if(-f 'spellcheck.ini')
{
  spell_check_ini;
}
else
{
  spell_check;
}
done_testing;
