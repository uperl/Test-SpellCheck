  ),
);

foreach my $inc (@INC)
{
  push @list, grep { !$hs->check($_) } map { path($_)->basename =~ s/\.pod$//r } bsd_glob "$inc/pod/*.pod";
}

my $path = path(__FILE__)->parent->parent->child('share/perl.dic');

my $fh = $path->openw;
say $fh "@{[ int @list ]}";
say $fh $_ for uniqstr sort @list;
